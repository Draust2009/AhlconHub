generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PostType {
  COMPLAINT
  DISCUSSION
  QUESTION
  ANNOUNCEMENT
}

model Post {
  id        String   @id @default(cuid())
  title     String
  content   String
  imageUrl  String?
  upvotes   Int      @default(0)
  type      PostType
  createdAt DateTime @default(now())
  comments Comment[]
}

model Comment {
  id String @id @default(cuid())
  content   String
  postId    String
  post      Post     @relation(fields: [postId], references: [id])
  createdAt DateTime @default(now())
}
