generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PostType {
  COMPLAINT
  DISCUSSION
  QUESTION
  ANNOUNCEMENT
}

model User {
  id        String    @id
  email     String?   @unique
  username  String?   @unique
  name      String?
  imageUrl  String?
  posts     Post[]    @relation("UserPosts")  // Explicit relation name
  createdAt DateTime  @default(now())
}

model Post {
  id        String   @id @default(cuid())
  title     String
  content   String
  imageUrl  String?
  upvotes   Int      @default(0)
  type      PostType
  createdAt DateTime @default(now())
  author    User     @relation("UserPosts", fields: [authorId], references: [id])
  authorId  String
}